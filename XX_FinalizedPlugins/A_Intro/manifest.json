{
  "manifest_version": 3,
  "name": "Universal Toggler",
  "version": "1.0",
  "description": "Toggle CSS, JavaScript, and HTML activation on and off.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "assets/js/background.js"
  },
  "action": {
    "default_title": "Toggle Extension",
    "default_icon": {
      "16": "assets/icons/icon-off.png",
      "48": "assets/icons/icon-off.png",
      "128": "assets/icons/icon-off.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/css/style.css",
        "assets/js/content.js",
        "assets/html/snippet.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/js/content.js"
      ]
    }
  ]
}